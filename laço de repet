var somaMultiplosDe3 = 0; 
var somaMultiplosDe3 = Number(prompt("multiplo de: "))
for (let x = 1; x <= 500; x++) {
    if (x % 3 === 0) { 
        somaMultiplosDe3 = somaMultiplosDe3 + x; 
    }
}
alert(somaMultiplosDe3);



