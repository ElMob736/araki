3
var A = Number(prompt("Digite um nÃºmero para calcular o fatorial:"));
var resultado = 1;
var sequencia = "";

for (var i = A; i >= 1; i--) {
  resultado *= i;
  
  if (i === 1) {
    sequencia += i;
  } else {
    sequencia += i + " x ";
  }
}

alert(A + "! = " + sequencia + " = " + resultado);

