var menorAltura = Infinity;
var maiorAltura = -Infinity;

for (let i = 1; i <= 15; i++) {
  var altura = Number(prompt(`Digite a altura da pessoa :`));

 
  if (altura < menorAltura) {
    menorAltura = altura;
  }

 
  if (altura > maiorAltura) {
    maiorAltura = altura;
  }
}

alert("Menor altura: " + menorAltura);
alert("Maior altura: " + maiorAltura);


